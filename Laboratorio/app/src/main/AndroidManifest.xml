<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="educacionit.clase3.laboratorio">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ListadoProductosActivity"
            android:label="@string/title_product_list">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".DetalleProductoActivity"
            android:label="@string/title_product_detail">
        </activity>

        <service android:name=".SincronizacionService"/>

    </application>

</manifest>
